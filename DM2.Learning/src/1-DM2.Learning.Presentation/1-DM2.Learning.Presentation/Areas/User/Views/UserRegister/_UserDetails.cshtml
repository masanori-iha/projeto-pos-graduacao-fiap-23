@model _3_DM2.Learning.Application.ViewModels.UserViewModel

<div class="col-md-4">
    <div class="container-title">
        <h4>Detalhes Usuário</h4>
    </div>
    <hr />

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Id" class="form-label">ID</label>
            <input asp-for="Id" class="form-control" disabled />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Nome</label>
            <input asp-for="Name" class="form-control Name" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Age" class="form-label">Idade</label>
            <input asp-for="Age" class="form-control Age" disabled />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a class="btn btn-primary register-user">Adicionar</a>
            <a class="btn btn-warning history-back"> Voltar </a>
        </div>
    </form>
</div>
<div class="col-md-4">
    <label class="form-label">Foto</label>
    <div class="mb-4" style="display: flex; flex-direction:column;">
        @if (string.IsNullOrEmpty(Model.UserImage.Url))
        {
            <img src="~/images/sem-imagem.png" class="user-foto" alt="foto pessoal" id="imgImage" />
        }
        else
        {
            <img src="@Model.UserImage.Url" class="user-foto" alt="foto pessoal" id="imgImage" />
            <a class="btn btn-danger mt-2 btn-delete-user-image"
               style="max-width: 6em;"
               title="Excluir Foto Usuário"
               data-userImage-id="@Model.UserImage.Id"
               data-userImage-name="@Model.UserImage.Name"
               data-user-id="@Model.Id"><i class="fa fa-trash"></i></a>
        }
    </div>
</div>

<script src="~/js/areas/user/cadastre/_userdetails.js?@(Guid.NewGuid())"></script>