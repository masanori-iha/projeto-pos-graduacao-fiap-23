@model _3_DM2.Learning.Application.ViewModels.UserViewModel

<div class="container-title bg-warning">
    <h4>Editar Usuário </h4>
</div>
<hr />

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Id" class="form-label">ID</label>
        <input asp-for="Id" class="form-control" disabled/>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Nome</label>
        <input asp-for="Name" class="form-control Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Age" class="form-label">Idade</label>
        <input asp-for="Age" class="form-control Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="UserImage.Name" class="form-label">Upload Foto</label>
        <input asp-for="UserImage.Name" id="imgImage" class="form-control user-file" type="file" value="" />
        <span asp-validation-for="UserImage.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a class="btn btn-primary edit-user">Editar</a>
        <a class="btn btn-warning history-back"> Voltar </a>
    </div>
</form>

<script src="~/js/areas/user/cadastre/_useredit.js"></script>